@{
    ViewData["Title"] = "Strona główna";
}

<style>
    body {
        background-color: #f2f3f5; 
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        color: #1a1a1a;
        line-height: 1.5;
    }

    .page-wrapper {
        max-width: 1200px;
        margin: 2rem auto 4rem auto;
        padding: 0 1rem;
        display: grid;
        gap: 1.5rem;
    }

    .item-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 1.5rem 1.5rem 1.25rem;
        box-shadow: 0 22px 40px rgba(0,0,0,0.07), 0 2px 6px rgba(0,0,0,0.04);
        border: 1px solid rgba(0,0,0,0.03);
        display: flex;
        flex-direction: column;
        gap: .5rem;
        transition: box-shadow .18s ease, transform .18s ease;
    }

        .item-card:hover {
            box-shadow: 0 28px 50px rgba(0,0,0,0.09), 0 4px 10px rgba(0,0,0,0.05);
            transform: translateY(-2px);
        }

    .item-header {
        font-size: 1rem;
        font-weight: 600;
        color: #111;
        display: flex;
        align-items: baseline;
        gap: .5rem;
    }

    .item-index {
        font-size: .9rem;
        font-weight: 500;
        color: #6b6b6b;
    }

    .item-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1f1f1f;
    }

    .item-body {
        font-size: .95rem;
        color: #444;
        line-height: 1.5;
    }

</style>

<div class="page-wrapper">

